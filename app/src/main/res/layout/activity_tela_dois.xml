<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaDois">

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="257dp"
        android:layout_height="63dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/stalinist_one"
        android:text="Escolha um personagem"
        android:textAlignment="center"
        android:textColor="#053979"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVoltar" />

    <ImageView
        android:id="@+id/img_shadow"
        android:layout_width="131dp"
        android:layout_height="245dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo"
        app:srcCompat="@drawable/foto_shadow" />

    <ImageView
        android:id="@+id/img_sonic"
        android:layout_width="178dp"
        android:layout_height="249dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toEndOf="@+id/img_shadow"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo"
        app:srcCompat="@drawable/foto_sonic" />

    <ImageView
        android:id="@+id/img_silver1"
        android:layout_width="153dp"
        android:layout_height="300dp"
        android:layout_marginTop="356dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foto_silver" />

    <Button
        android:id="@+id/btnShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:backgroundTint="#E50103"
        android:text="Shadow"
        android:textColorLink="#040404"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_shadow" />

    <Button
        android:id="@+id/btnSonic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#003BB2"
        android:text="Sonic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_sonic" />

    <Button
        android:id="@+id/btnSilver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:backgroundTint="#5DDCBC"
        android:text="Silver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_silver1" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="84dp"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#0075F4"
        android:text="Voltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>